/**
 * @fileoverview Firestore Security Rules for the Interior Design Mastery application.
 *
 * Core Philosophy:
 * This ruleset allows unauthenticated users to submit contact form submissions.
 *
 * Data Structure:
 * Contact form submissions are stored in the `contactFormSubmissions` collection.
 *
 * Key Security Decisions:
 * - Unauthenticated access is granted for creating contact form submissions to allow easy contact.
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * @description Allows anyone to create contact form submissions, but restricts all other operations.
     * @path /contactFormSubmissions/{contactFormSubmissionId}
     * @allow (create) Anyone can submit a contact form.
     * @deny (get, list, update, delete) No one can read or modify existing contact forms.
     * @principle Allows unauthenticated contact form submissions.
     */
    match /contactFormSubmissions/{contactFormSubmissionId} {
      allow get: if false;
      allow list: if false;
      allow create: if true;
      allow update: if false;
      allow delete: if false;
    }
  }
}